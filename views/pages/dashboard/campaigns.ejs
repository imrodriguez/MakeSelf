<!DOCTYPE html>
<html lang="es">
<head>
  <% include ../../partials/head %>
  <link rel="stylesheet" href="/css/dashboard/dashboard.css">
</head>
<body>

  <header>
    <% include ../../partials/header %>
  </header>

  <main class="container-fluid ctm-fullh">
    <div class="row ctm-fullh">
      <% include ../../partials/dashboard/sidebar %>

      <div class="col">
        <div class="row">
          <div class="col-12 title">
            <h2>Campaigns</h2>
          </div>
        </div>

        <div class="col-12 content">
          <div class="row">
            <div class="col-3">
              <a href=""class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newcampaign">
                <i class="fa fa-plus" aria-hidden="true"></i> Campaign
              </a>
            </div>
          </div>

          <div class="row text-center">
            <% campaigns.forEach(function(campaign) { %>
              <div class="col-sm-10 col-md-4 col-lg-3">
              <a href="/dashboard/campaign/<%= campaign._id %>">
              <div class="card">
              <div class="card-block">
              <h3 class="card-title"><%= campaign.title %></h3>
              <a href="/dashboard/campaign/<%= campaign._id %>" class="btn btn-primary">Go</a>
              <a href="/dashboard/deletecampaign/<%= campaign._id %>" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
              </div>
              </div>
              </a>
              </div>
              <% }); %>

            </div>
          </div>
        </div>
      </div>
    </main>
    <% include ../../partials/dashboard/newcampaign %>

    <footer>
      <% include ../../partials/footer %>
    </footer>

  </body>
  </html>
