<div class="modal fade" id="newdesign" tabindex="-1" role="dialog" aria-labelledby="newcampaign" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Design</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/dashboard/campaign/<%= campaign._id %>/newdesign" method="post">
          <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Name">
          </div>

          <div class="form-group">
            <input type="textarea" name="description" class="form-control" placeholder="Description">
          </div>

          <div class="form-group">
            <input type="submit" name="NewDesign" value="New Design" class="btn btn-primary">
          </div>

        </form>
      </div>
      <%# <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
    </div>%>
  </div>
</div>
</div>
